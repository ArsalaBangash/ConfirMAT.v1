<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arsalabangash.confirmat.Settings">

    <TextView
        android:text="Settings"
        android:fontFamily="sans-serif-light"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/settingsText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.SwitchCompat
        android:text="Addition   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/additionSwitch"
        android:checked="true"
        android:layout_below="@+id/settingsText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <android.support.v7.widget.SwitchCompat
        android:text="Subtraction   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtractionSwitch"
        android:checked="true"
        android:layout_alignBaseline="@+id/additionSwitch"
        android:layout_alignBottom="@+id/additionSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <android.support.v7.widget.SwitchCompat
        android:text="Multiplication   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/multiplySwitch"
        android:checked="true"
        android:layout_below="@+id/additionSwitch"
        android:layout_alignRight="@+id/additionSwitch"
        android:layout_alignEnd="@+id/additionSwitch" />

    <android.support.v7.widget.SwitchCompat
        android:text="Division   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divideSwitch"
        android:checked="true"
        android:layout_alignBaseline="@+id/multiplySwitch"
        android:layout_alignBottom="@+id/multiplySwitch"
        android:layout_alignRight="@+id/subtractionSwitch"
        android:layout_alignEnd="@+id/subtractionSwitch" />

    <android.support.v7.widget.SwitchCompat
        android:text="Exponents   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expSwitch"
        android:checked="true"
        android:layout_alignBaseline="@+id/logSwitch"
        android:layout_alignBottom="@+id/logSwitch"
        android:layout_alignRight="@+id/divideSwitch"
        android:layout_alignEnd="@+id/divideSwitch" />

    <android.support.v7.widget.SwitchCompat
        android:text="Decimals   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decimalSwitch"
        android:checked="true"
        android:layout_alignBaseline="@+id/rootSwitch"
        android:layout_alignBottom="@+id/rootSwitch"
        android:layout_alignRight="@+id/expSwitch"
        android:layout_alignEnd="@+id/expSwitch" />

    <android.support.v7.widget.SwitchCompat
        android:text="Logarithms   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/logSwitch"
        android:checked="true"
        android:layout_below="@+id/multiplySwitch"
        android:layout_alignRight="@+id/multiplySwitch"
        android:layout_alignEnd="@+id/multiplySwitch" />

    <android.support.v7.widget.SwitchCompat
        android:text="Roots   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/rootSwitch"
        android:checked="true"
        android:layout_below="@+id/logSwitch"
        android:layout_alignRight="@+id/logSwitch"
        android:layout_alignEnd="@+id/logSwitch" />

</RelativeLayout>
